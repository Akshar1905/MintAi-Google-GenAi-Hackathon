# Example environment variables for Docker build
# Copy this file to .docker.env and fill in your values
# Then use: docker-compose --env-file .docker.env up

# Firebase Configuration
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id
VITE_FIREBASE_MEASUREMENT_ID=your-measurement-id

# Gemini AI Configuration
VITE_GEMINI_API_KEY=your-gemini-api-key

# Optional: YouTube API
VITE_YOUTUBE_API_KEY=your-youtube-api-key

# External APIs (for quotes and memes)
VITE_QUOTE_API=https://zenquotes.io/api/random
VITE_MEME_API=https://meme-api.com/gimme

# Optional: Backend API
VITE_API_BASE_URL=https://your-backend-url.com
VITE_USE_BACKEND_API=false

